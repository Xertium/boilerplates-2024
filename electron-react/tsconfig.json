{
	"compilerOptions": {
		"incremental": true,
		"target": "es2022",
		"module": "commonjs",
		"lib": ["dom", "es2022"],
		"jsx": "react-jsx",
		"strict": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"outDir": ".boilerplate/dll",
		"baseUrl": ".",
		"paths": {
			"@/assets/*": ["../assets/*"],
			"@/*": ["src/renderer/*"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"./.boilerplate/**/*.ts",
	],
	"exclude": [
		"./release/build",
		"./release/app/dist",
		"./.boilerplate/dll"
	],
}

{
	"name": "nodejs-app-typescript-boilerplate",
	"version": "1.0.0",
	"description": "This is a NodeJS application boilerplate with TypeScript support.",
	"main": "index.js",
	"author": "Noé Tamás",
	"license": "MIT",
	"private": true,
	"browserslist": [],
	"devEngines": {
		"node": ">=20.x",
		"yarn": ">=1.x"
	},
	"scripts": {
		"build": "tsc --noEmit false && tscpaths -p tsconfig.json -s ./src -o ./dist",
		"start:main": "nodemon --config ./.boilerplate/configs/nodemon/main.json",
		"pm2:main": "pm2 start ./.boilerplate/configs/pm2/main.js",
		"sql": "nodemon --inspect --config ./.boilerplate/configs/nodemon/sql.json"
	},
	"dependencies": {
		"axios": "^1.6.5",
		"bcryptjs": "^2.4.3",
		"cors": "^2.8.5",
		"express": "^4.18.2",
		"helmet": "^7.1.0",
		"jsonwebtoken": "^9.0.2",
		"moment": "^2.30.1",
		"pg": "^8.11.3",
		"sequelize": "^6.37.1",
		"uuid": "^9.0.1"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.6",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/helmet": "^4.0.0",
		"@types/node": "20.11.0",
		"@types/terminal-kit": "^2.5.6",
		"@types/uuid": "^9.0.8",
		"@typescript-eslint/eslint-plugin": "^6.7.0",
		"@typescript-eslint/parser": "^6.7.0",
		"chalk": "^4.1.2",
		"concurrently": "^8.2.2",
		"cross-env": "^7.0.3",
		"detect-port": "^1.5.1",
		"eslint": "^8.49.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-import": "^2.28.1",
		"eslint-plugin-import-newlines": "^1.4.0",
		"eslint-plugin-promise": "^6.1.1",
		"nodemon": "^3.0.3",
		"prettier": "^3.0.3",
		"rimraf": "^5.0.1",
		"terminal-kit": "^3.1.1",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"tscpaths": "^0.0.9",
		"typescript": "^5.2.2"
	}
}
